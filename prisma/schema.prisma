generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  
  // Profile data fields
  firstName String?
  lastName  String?
  avatarUrl String?
  
  // Relations
  authMethods AuthMethod[]
}

enum AuthMethodType {
  LOCAL
  GOOGLE
  // Add other providers as needed
}

model AuthMethod {
  id             String         @id @default(cuid())
  userId         String
  type           AuthMethodType
  identifier     String         // Could be email for LOCAL, provider's user ID for OAuth
  credential     String?        // Hashed password for LOCAL, access token for OAuth
  refreshToken   String?        // For OAuth
  isVerified     Boolean        @default(false)
  lastUsedAt     DateTime?
  failedAttempts Int            @default(0)
  lockedUntil    DateTime?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @default(now()) @updatedAt
  
  // Relations
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokens Token[]
  
  // Unique constraint to ensure one type per userId-identifier combination
  @@unique([userId, type, identifier])
}

model Token {
  id           String    @id @default(cuid())
  authMethodId String
  token        String    @unique
  expiresAt    DateTime
  createdAt    DateTime  @default(now())
  revoked      Boolean   @default(false)
  
  // Relations
  authMethod AuthMethod @relation(fields: [authMethodId], references: [id], onDelete: Cascade)
}

model Sign {
  id          String   @id @default(cuid())
  word        String
  definition  String? // Null if no definition
  mediaUrl    String? // URL to image or video
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}